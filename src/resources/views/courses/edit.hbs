

<div class="container">
    <div class="mt-4">
    <h3>EDIT COURSE</h3>

    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
  <div class="mb-3">
    <label for="name" class="form-label">Course name</label>
    <input type="text" class="form-control" id="course-name" value="{{course.name}}" name="name">
  </div>
  <div class="mb-3">
    <label for="des" class="form-label">Course description</label>
    <textarea  class="form-control" id="course-des" name="des">{{course.des}}</textarea>
  </div>
  <div class="mb-3">
    <label for="image" class="form-label">Image</label>
    <input type="text" class="form-control" id="course-image" value="{{course.image}}" name="image">
  </div>
  <div class="mb-3">
    <label for="slut" class="form-label">Slut</label>
    <input type="text" class="form-control" id="course-slut" value="{{course.slut}}" name="slut">
  </div>
  <button type="submit" class="btn btn-primary">Save</button>
</form>
</div>
</div>

