<div class="container">
    <div class="mt4">
    <h3>My course</h3>

<table class="table">
    <thead>
        <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Image</th>
        <th scope="col" colspan="2"></th>
        </tr>
    </thead>
    <tbody>
        {{#each courses}}
        <tr>
        <th scope="row">{{sum @index 1}}</th>
        <td>{{this.name}}</td>
        <td>{{this.des}}</td>
        <td><a target="_blank" href="{{this.image}}">{{this.image}}</a></td>
        <td>
            <a href="/courses/{{this._id}}/edit" class="btn btn-link">Modify</a>
            <a href="/courses" class="btn btn-link">Delete</a>
        </td>
        </tr>
        {{/each}}
    </tbody>
    </table>

</div>
</div>